<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothFinder.Pages.MainPage"
             Title="Bluetooth Finder">
    <VerticalStackLayout Padding="12" Spacing="8">
        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto">
            <Label Text="Device-uri" FontSize="22" />
            <Button Grid.Column="1" Text="Rescan" Command="{Binding ScanCommand}" />
            <Button Grid.Column="2" Text="Setări" Clicked="OnSettings" />
        </Grid>

        <CollectionView ItemsSource="{Binding Devices}" SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="{Binding GridSpan}" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="6" HasShadow="True" CornerRadius="12" BackgroundColor="{Binding TileColor}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" TextColor="White" />
                            <!-- Toggle alarm în colțul din dreapta-sus -->
                            <Switch Grid.RowSpan="2"
                                    HorizontalOptions="End" VerticalOptions="Start"
                                    IsToggled="{Binding AlarmEnabled}">
                                <Switch.ThumbColor>
                                    <OnAppThemeColor Light="White" Dark="White"/>
                                </Switch.ThumbColor>
                                <Switch.OnColor>
                                    <OnAppThemeColor Light="Lime" Dark="Lime"/>
                                </Switch.OnColor>
                            </Switch>

                            <Button Grid.Row="1" Text="Deschide" BackgroundColor="#66000000" TextColor="White"
                                    Clicked="OnOpenDevice" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
