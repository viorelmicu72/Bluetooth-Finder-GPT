<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluetooth__Finder.Pages.DevicePage"
             Title="{Binding Device.Name}">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Button Text="Alarma (sună dispozitivul / telefonul)" Command="{Binding RingCommand}" />
        <Label Text="Ultimele 10 locații de deconectare" FontAttributes="Bold"/>
        <CollectionView ItemsSource="{Binding Device.LastDisconnects}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding When, StringFormat='{0:G}'}" />
                        <Label Text="{Binding Latitude}" Margin="10,0,0,0"/>
                        <Label Text="{Binding Longitude}" Margin="10,0,0,0"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
