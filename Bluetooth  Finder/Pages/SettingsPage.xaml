<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="Bluetooth__Finder.Pages.SettingsPage"
             Title="Setări">
    <VerticalStackLayout Padding="16" Spacing="12">
        <HorizontalStackLayout>
            <Label Text="Pătrate pe linie:" VerticalOptions="Center"/>
            <Stepper Minimum="1" Maximum="4" Increment="1" Value="{Binding GridSpan}" />
            <Label Text="{Binding GridSpan}" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Button Text="Alege melodie alarmă" Command="{Binding PickAlarmCommand}" />
        <Label Text="{Binding AlarmFilePath}" LineBreakMode="TailTruncation" />

        <Button Text="Aplică" Command="{Binding ApplyCommand}" />
    </VerticalStackLayout>
</ContentPage>
